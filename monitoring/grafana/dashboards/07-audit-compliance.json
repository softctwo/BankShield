{
  "dashboard": {
    "title": "BankShield - 审计合规监控",
    "tags": ["bankshield", "audit", "compliance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "今日审计日志数",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(bankshield_audit_log_writes_total[24h])",
            "legendFormat": "审计日志"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "区块链存证数",
        "type": "stat",
        "targets": [
          {
            "expr": "bankshield_blockchain_blocks_count",
            "legendFormat": "区块数"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "合规检查通过率",
        "type": "gauge",
        "targets": [
          {
            "expr": "bankshield_compliance_check_pass_rate * 100",
            "legendFormat": "通过率"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "thresholds": [
          {"value": 0, "color": "red"},
          {"value": 80, "color": "yellow"},
          {"value": 95, "color": "green"}
        ]
      },
      {
        "id": 4,
        "title": "待处理合规问题",
        "type": "stat",
        "targets": [
          {
            "expr": "bankshield_compliance_issues_pending_count",
            "legendFormat": "待处理"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "thresholds": [
          {"value": 0, "color": "green"},
          {"value": 5, "color": "yellow"},
          {"value": 20, "color": "red"}
        ]
      },
      {
        "id": 5,
        "title": "审计日志写入速率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_audit_log_writes_total[5m])",
            "legendFormat": "写入速率"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 6,
        "title": "合规检查执行趋势",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_compliance_checks_total[5m])",
            "legendFormat": "{{check_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 7,
        "title": "操作审计统计",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (operation_type) (rate(bankshield_audit_operations_total[5m]))",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 8,
        "title": "合规报告生成统计",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_compliance_reports_generated_total[5m])",
            "legendFormat": "报告生成"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}
