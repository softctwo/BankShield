{
  "dashboard": {
    "title": "BankShield - 业务指标监控",
    "tags": ["bankshield", "business", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "数据分类操作趋势",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_classification_operations_total[5m])",
            "legendFormat": "{{operation}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "数据脱敏操作趋势",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_masking_operations_total[5m])",
            "legendFormat": "{{algorithm}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "审计日志写入速率",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_audit_log_writes_total[5m])",
            "legendFormat": "日志/秒"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "合规检查执行次数",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bankshield_compliance_checks_total[5m])",
            "legendFormat": "{{check_type}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "数据资产统计",
        "type": "stat",
        "targets": [
          {
            "expr": "bankshield_asset_total_count",
            "legendFormat": "总资产数"
          },
          {
            "expr": "bankshield_asset_sensitive_count",
            "legendFormat": "敏感资产数"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "脱敏性能统计",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(bankshield_masking_duration_seconds_bucket[5m]))",
            "legendFormat": "P95脱敏时间"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 16},
        "yaxes": [
          {
            "format": "s",
            "label": "时间"
          }
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
